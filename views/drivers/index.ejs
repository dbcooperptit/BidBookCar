    <!-- Full Width Column -->
    <div class="content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-9 no-padding">
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <h1>
                            Home BID
                            <small>Hướng tới tương lai !!</small>
                        </h1>
                    </section>

                    <!-- Main content -->
                    <section class="content">
                        <div class="insert-after"></div>
                        <% if (dataIndex.length > 0) { %>
                        <% dataIndex.forEach(x=> { %>
                        <div class="box box-danger block-post" id="<%= x.post._id%>">
                            <div class="box-header ui-sortable-handle" style="cursor: move;">
                                <div class="box-tools pull-right" data-toggle="tooltip" title="Status">
                                    <i class="fa fa-comments-o"></i>
                                    <h3 class="box-title">Book Bike</h3>
                                </div>
                            </div>
                            <div class="box-body">

                                <div class="user-block">
                                    <img class="img-circle img-bordered-sm" src="<%= x.poster.picture %>" alt="<%= x.poster.fullName %>">
                                    <span class="username">
                                        <a href="#"><%= x.poster.fullName%></a>
                                    </span>
                                    <span class="description"><%= x.post.createAt%></span>
                                </div>

                                <p style="text-transform: uppercase; color: #333; font-weight: bold; font-size: 15px; margin-bottom: 15px; margin-top: 10px">
                                    <i class="fa fa-motorcycle" aria-hidden="true"></i>
                                    </i>&nbsp;&nbsp;Lộ trình</p>
                                <table class="table">
                                    <tbody>
                                    <tr style="text-align: center;">
                                        <td>
                                            <span><i class="fa fa-map-marker" aria-hidden="true"></i>
                                              <b>Điểm đi</b>
                                          </span>
                                        </td>
                                        <td><i class="fa fa-arrow-circle-right" aria-hidden="true"></i></td>
                                        <td>
                                            <span><i class="fa fa-map-marker" aria-hidden="true"></i>
                                               <b>Điểm đến</b>
                                           </span>
                                        </td>
                                    </tr>
                                    <tr style="text-align: center;">
                                        <td><%= x.post.location%></td>
                                        <td></td>
                                        <td><%= x.post.destination %></td>
                                    </tr>
                                    </tbody>
                                </table>
                                <p style="text-transform: uppercase; color: #333; font-weight: bold; font-size: 15px; margin-bottom: 15px; margin-top: 10px">
                                    <i class="fa fa-usd" aria-hidden="true"></i>
                                    </i>&nbsp;&nbsp;Giá</p>
                                <table class="table">
                                    <tbody>
                                    <tr style="text-align: center;">
                                        <td>
                                            <span><i class="fa fa-money" aria-hidden="true"></i></i>
                                                <b>Best BID</b>
                                            </span>
                                        </td>
                                        <td>
                                            <i class="fa fa-arrows-h"></i>
                                        </td>
                                        <td>
                                            <span><i class="fa fa-gg" aria-hidden="true"></i>
                                              <b>Đơn vị</b></span>
                                        </td>
                                    </tr>
                                    <tr style="text-align: center;">
                                        <td>
                                            <span class="badge bg-green" id="<%= x.post._id%>-best-price"><%= x.bestPrice %></span>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <span class="badge bg-danger">VNĐ</span>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                                <p style="text-transform: uppercase; color: #333; font-weight: bold; font-size: 15px; margin-bottom: 15px; margin-top: 10px">
                                    <i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp;&nbsp;Thông tin tập trung
                                </p>
                                <p class="trip-info"><%= x.post.status %></p>
                                <p style="text-transform: uppercase; color: #333; font-weight: bold; font-size: 15px; margin-bottom: 15px; margin-top: 10px">
                                    <i class="fa fa-clock-o" aria-hidden="true"></i> Thời gian còn lại
                                </p>
                                <span class="badge bg-red count-downs-expiredTime" data-await-time="<%= x.post.expiredTime%>"></span>

                            </div>
                            <div class="box-footer">
                                <label for="driver-bid" class="col-sm-2 control-label">BID</label>
                                <div class="col-sm-2">
                                    <input type="number" class="form-control driver-bid" placeholder="BID" value="<%= x.driverBid.price%>">
                                </div>

                                <label for="driver-arrival-time" class="col-sm-2 control-label">Thời gian tới</label>
                                <div class="col-sm-2">
                                    <input type="number" class="form-control driver-arrival-time" placeholder="Phút">
                                </div>
                                <div class="col-sm-3">
                                    <a type="submit" class="btn btn-danger pull-right btn-block btn-sm send-bid">Send</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                        <% } %>
                    </section>
                    <!-- /.content -->
                </div>
                <div class="col-md-3 no-padding">
                    <div class="content-header">
                        <h1>
                            Top Driver
                        </h1>
                    </div>
                    <div class="content">
                        <div class="box box-info" id="top-drivers-bid">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
